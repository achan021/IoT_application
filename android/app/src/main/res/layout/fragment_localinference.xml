<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Placeholder for model information"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/sendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="5dp"
        android:text="Send Message" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/imageGrid"
        android:layout_width="match_parent"
        android:layout_height="510dp"
        android:layout_below="@+id/sendButton"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/imageView0"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="#FFFFFF"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@android:drawable/ic_menu_report_image" />
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="#FFFFFF"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@android:drawable/ic_menu_report_image" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="#FFFFFF"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@android:drawable/ic_menu_report_image" />
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="#FFFFFF"
            app:layout_column="0"
            app:layout_row="3"
            app:srcCompat="@android:drawable/ic_menu_report_image" />
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="#FFFFFF"
            app:layout_column="0"
            app:layout_row="4"
            app:srcCompat="@android:drawable/ic_menu_report_image" />
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="#FFFFFF"
            app:layout_column="0"
            app:layout_row="5"
            app:srcCompat="@android:drawable/ic_menu_report_image" />

        <EditText
            android:id="@+id/Prediction0"
            android:layout_width="wrap_content"
            android:layout_height="81dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="None"
            app:layout_column="1"
            app:layout_row="0"
            app:layout_columnWeight="100"
            app:layout_rowWeight="100"/>
        <EditText
            android:id="@+id/Prediction1"
            android:layout_width="wrap_content"
            android:layout_height="81dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="None"
            app:layout_column="1"
            app:layout_row="1"
            app:layout_columnWeight="100"
            app:layout_rowWeight="100"/>
        <EditText
            android:id="@+id/Prediction2"
            android:layout_width="wrap_content"
            android:layout_height="81dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="None"
            app:layout_column="1"
            app:layout_row="2"
            app:layout_columnWeight="100"
            app:layout_rowWeight="100"/>
        <EditText
            android:id="@+id/Prediction3"
            android:layout_width="wrap_content"
            android:layout_height="81dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="None"
            app:layout_column="1"
            app:layout_row="3"
            app:layout_columnWeight="100"
            app:layout_rowWeight="100"/>
        <EditText
            android:id="@+id/Prediction4"
            android:layout_width="wrap_content"
            android:layout_height="81dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="None"
            app:layout_column="1"
            app:layout_row="4"
            app:layout_columnWeight="100"
            app:layout_rowWeight="100"/>
        <EditText
            android:id="@+id/Prediction5"
            android:layout_width="wrap_content"
            android:layout_height="81dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="None"
            app:layout_column="1"
            app:layout_row="5"
            app:layout_columnWeight="100"
            app:layout_rowWeight="100"/>
    </androidx.gridlayout.widget.GridLayout>

    <Button
        android:id="@+id/loadImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/sendButton"
        android:layout_below="@+id/textView"
        android:layout_marginTop="5dp"
        android:text="Load Image"/>

    <Button
        android:id="@+id/Predict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/loadImage"
        android:text="Predict"/>

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="Next"
        android:textSize="10dp" />

    <Button
        android:id="@+id/prev_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/next_button"
        android:layout_alignParentBottom="true"
        android:text="Prev"
        android:textSize="10dp" />

</com.google.android.material.circularreveal.CircularRevealRelativeLayout>